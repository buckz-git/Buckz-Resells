  <main>
    <!-- HERO -->
    <section class="hero">
      <div class="container hero-inner">
        <div>
          <p class="hero-eyebrow">Buckz Resells • Curated heat</p>
          <h1 class="hero-title">
            Shop all our <span class="hero-highlight">Buckz collections</span>
          </h1>
          <p class="hero-subtitle">
            Buckz Resells moves streetwear, sneakers, and designer pieces for way less than retail. Every item is checked
