            <div class="brand-pill"><span class="brand-dot"></span> Chrome Hearts</div>
          </div>
        </div>
      </div>
    </section>

    <!-- STORE (ECWID) -->
    <section id="store" class="store-section">
      <div class="container">
        <div class="store-header">
          <div>
            <h2 class="store-title">New in Buckz Resells</h2>
            <p class="store-subtitle">
              Tap a product to view sizing, condition, and details. Checkout is handled securely through our Ecwid-powered
              Buckz Resells store. Use categories and filters inside the store to dial in what you want.
            </p>
          </div>
          <div class="store-pill">All Buckz drops • Filter in-store</div>
        </div>

        <!-- ECWID STORE EMBED (STORE ID: 118134046) -->
        <div id="my-store-118134046"></div>

        <script
          data-cfasync="false"
          type="text/javascript"
          src="https://app.ecwid.com/script.js?118134046&data_platform=code"
          charset="utf-8">
        </script>

        <script type="text/javascript">
          xProductBrowser(
            "categoriesPerRow=3",
            "views=grid(20,3) list(60) table(60)",
            "categoryView=grid",
            "searchView=list",
            "id=my-store-118134046"
          );
        </script>
      </div>
    </section>

    <!-- TESTIMONIALS -->
    <section class="testimonials">
